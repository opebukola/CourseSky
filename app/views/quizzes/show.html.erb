<%= provide(:title, 'Quiz' + @quiz.id.to_s) %>

<div class="intro">
	<div class="start">
		<%= link_to @course.title, course_path(@course) %> | Practice: <%= @lesson.title%><br />
	</div> 
</div>


<%= render partial: 'questions/attempt', collection: @attempts %>
<a class="next-question btn btn-primary btn-next" href="#"><i class="icon-circle-arrow-right"></i>Next Question</a>
</section>
<%= link_to finish_quiz_path(@quiz), class: "finish-quiz btn btn-success" do %>
	<i class="icon-thumbs-up"></i>
	Finish Quiz
<% end %>
<br />