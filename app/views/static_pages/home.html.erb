<% provide(:title, 'Welcome') %>
<section>
  <div class="center">
    <h1><span class="control">Take control of your learning.</span><br />
      Free, interactive, college-prep courses</h1>
  </div>
</section>
<h2> Pick a course and start learning!</h2> 

  <% @courses.each do |course| %>
    <div class="new-box">
    	<div class="image">
    		<%= link_to image_tag(course.cover_image_url(:home)), course_path(course) %>
    	</div>
      <h3><%= course.title %><br /></h3>
    </div>
    <% end %>
<br />

<%= form_tag courses_path, class: "search",method: :get do %>
        <%= text_field_tag :query, params[:query], placeholder: "Search courses" %>
<% end %>
