<% if current_user %>
	<% if @lesson_progression && @lesson_progression.completed %>
			<%= 'You have completed this lesson' %>
	<% else %>
		<%= link_to "Mark Lesson Complete", complete_lesson_progression_path(enrolled_lesson_id: @lesson.id, enrolled_course_id: @lesson.course.id), method: :put, class: 'btn' %>
	<% end %>
<% end %>