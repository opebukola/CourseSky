<fieldset>
	<%= f.input :content, as: :ckeditor, label: "Add New Question", input_html: {toolbar: 'Basic'} %>
	<%= f.hidden_field :_destroy %>
	<%= link_to "Remove Question", '#', class: "remove_fields" %>
	<p>
		<%= f.simple_fields_for :answers do |builder| %>
			<%= render 'answer_fields', f: builder %>
		<% end %>
		<%= link_to_add_fields "Add correct answer", f, :answers %>
	</p>
</fieldset>