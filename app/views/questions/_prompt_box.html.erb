<%= content_tag "div", class: "span5 prompt", data: { hint: @question.hint} do %>
  <%= markdown @question.prompt %><br />
  <% if @question.content %>
    <%= link_to 'javascript:void(0)', "data-toggle" => "modal", "data-target" => "#video-container" do %>
    <i class=" icon-play"></i> Watch a Video
    <% end %> |
    <%= link_to 'javascript:void(0)', "data-toggle" => "modal", "data-target" => "#doc-container" do %>
    <i class=" icon-book"></i> Read a Snippet
    <% end %><br /><br />
    <em> When you're ready to move on, answer the question</em>
  <% end %>
<% end %>

    