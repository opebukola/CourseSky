<%= @question.explanation %>
<hr />
<% if question.next_question %>
	<%= link_to question.next_question, :class => "btn btn-large btn-primary" do %>
	  <i class="icon-circle-arrow-right"></i>
	  Continue Lesson
	<% end %>
<% else %>
	<%= link_to share_course_lesson_path(@question.course,
	@question.lesson), :class => "btn" do %>
	<i class="icon-circle-arrow-right"></i>
	  Next
	<% end %>
<% end %>