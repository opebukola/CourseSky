<%= provide(:title, 'Your Dashboard') %>

<div>
<%= image_tag @user.avatar_url(:profile) %><br />
<% if @user.name %>
    <%= link_to @user.name, user_path(@user) %>
<% else %>
    <%= link_to @user.username, user_path(@user) %>
<% end %>
</div>
<br />

<h2> You're Learning:</h2>
<div>
  <% @user.enrolled_courses.each do |course| %>
  <div id = "leave-course-<%=course.id%>">
    <%= link_to course.title, course_path(course) %><br />
    Progress: <%= @user.progress(course) %> percent.<br />
    <%= simple_form_for(current_user.enrollments.find_by_enrolled_course_id(course.id), html: {method: :delete}, remote:true) do |f| %>
      <%= f.button :submit, "Leave course", class: 'btn btn-danger' %>
    <% end %>
  </div>
  <% end %>
</div>

<h2> You're Teaching: </h2>
<% @user.courses.each do |course| %>
  <%= link_to course.title, manage_course_path(course) %> |
  Status: <%= course.status %> |
  Featured on site: <%= course.feature_status %><br />
<% end %>
