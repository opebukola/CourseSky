<%= provide(:title, @course.title) %>

<%= render 'course_info' %>
<p>
	<h3> Lessons In This Course: </h3><br />
	<% @course.lessons.each do |lesson| %>
		<ul>
			<li><%= link_to lesson.title, course_lesson_path(course_id: @course.id, id: lesson.id) %></li>
		</ul>
	<% end %>
</p>
<hr />
<%= link_to 'Course Admin', manage_course_path(@course), class: "btn btn-primary" if @course.user == current_user %>
