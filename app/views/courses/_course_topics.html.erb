<% @units.each do |u| %>
  <div class="accordion course-topics" id="unit_accordion">
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#unit_accordion" href="#lessons_unit_<%=u.position%>">
          <h3>Unit <%=u.position%>: <%= u.title %></h3>
        </a>
      </div>
      <div id="lessons_unit_<%=u.position%>" class="accordion-body collapse">
        <div class="accordion-inner">
          <% if u.lessons.any? %>
            <ol>
              <% u.lessons.each do |l| %>
                <% if l.lesson_activities.any? %>
                  <li>
                    <h4>
                    <%= link_to l.title, lesson_activity_path(l.lesson_activities.first)  %> |
                    <% if current_user && current_user.enrolled?(@course) %>
                      <%=l.progress(current_user).round(0) %>% complete |
                      Score: <%= l.score(current_user).round(0)%>%
                    <% end %> 
                  </h4>
                  </li>
                <% else %>
                  This unit has no lessons yet. Check back soon!
                <% end %>
              <% end %>
            </ol>
          <% else %>
            This unit has no lessons yet. Check back soon!
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
