<% @units.each do |u| %>
  <div class="accordion" id="unit_accordion">
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#unit_accordion" href="#lessons_unit_<%=u.position%>">
          <h3>Unit <%=u.position%>: <%= u.title %></h3>
        </a>
      </div>
      <div id="lessons_unit_<%=u.position%>" class="accordion-body collapse">
        <div class="accordion-inner">
          <% if u.lessons.any? %>
            <ol>
              <% u.lessons.each do |l| %>
                <li>
                  <h4>
                  <%= l.title %> |
                  <%= link_to "Learn", lesson_item_path(l.lesson_items.first) %> |
                  <%= link_to "Practice", new_quiz_path(lesson_id: l.id, course_id: @course.id) %>
                </h4>
                </li><br />   
              <% end %>
            </ol>
          <% else %>
            This unit has no lessons yet. Check back soon!
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
