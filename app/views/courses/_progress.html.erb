<% if current_user && current_user.enrolled?(@course) %>
	<div class="progress progress-success">
		<div class="bar" style="width:<%= current_user.progress(@course) %>%;">Your Progress: <%= current_user.progress(@course) %>% complete
  	</div>
  </div>
 <% else %>
 	<div class="progress progress-none">
		<div class="bar" style="width:100%;"><%=link_to 'Log In', new_user_session_path %> or <%= link_to 'Sign Up', new_user_registration_path %> to save your progress!
  	</div>
  </div>
 <% end %>
