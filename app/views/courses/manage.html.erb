<%= provide(:title, 'Manage Course') %>
<ul class="nav nav-tabs">
  <li class="active"><a href="#info" data-toggle="tab">Basics</a></li>
  <li><a href="#course-units" data-toggle="tab">Units</a></li>
  <li><a href="#course-lessons" data-toggle="tab">Lessons</a></li>
  <li><a href="#course-status" data-toggle="tab">Status</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="info">
    <div class="tab-pane active course-description" id="about">
      <%= markdown @course.description %>
    </div><br />
    <%= link_to 'Edit Basic Information', edit_course_path, class: "btn btn-primary"  %>
    <%= link_to 'Delete Course', course_path(@course),
                                    method: :delete,
                                    data: {confirm: 'Are you sure?'},
                                    class: "btn btn-danger" %>
  </div>
  <div class="tab-pane" id="course-units">
    <%= render 'manage_units' %>
  </div>
  <div class="tab-pane" id="course-lessons">
    <%= render 'lesson_list' %>
  </div>
  <div class="tab-pane" id="course-status">
    <%= render 'publish' %>
  </div>
</div>

