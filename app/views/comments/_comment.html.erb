<div class="comments" %>
  <p>
    <%= comment.content %><br />
    <strong>Posted by:</strong> <%= comment.user.fname %><br />
    <%= link_to 'Reply', new_comment_path(parent_id: comment, concept_id: @activity.activity_id) %>
    <%= link_to 'Delete', comment_path(comment),
                         method: :delete,
                         data: {confirm: 'Are you sure?'} if current_user == comment.user || current_user.try(:admin?) %>
  </p>
</div>
