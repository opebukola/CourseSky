<%= provide(:title, 'All Categories') %>

<h3> Add & Edit Categories </h3>
<ul>
	<% @categories.each do |category| %>
		<li>
			<%= link_to category.name, '#' %> |
			<%= link_to 'Edit', edit_category_path(category) %> |
			<%= link_to 'Delete', category_path(category), 
															method: :delete,
															data: {confirm: 'Are you sure?'} %>
			<ul>
				<% category.children.each do |child| %>
					<li>
						<%= link_to child.name, '#' %> |
						<%= link_to 'Edit', edit_category_path(child) %> |
						<%= link_to 'Delete', category_path(child),
																	method: :delete,
																	data: {confirm: 'Are you sure?'} %>
					</li>
				<% end %>
			</ul>
		</li>
	<% end %>
</ul>
<%= link_to 'Add New Category', new_category_path %> 